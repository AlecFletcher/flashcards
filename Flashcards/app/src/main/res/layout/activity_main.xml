<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/solid_color_shape"
        android:text="Who is the 44th President of the United States?"
        android:textAlignment="center"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/fake_answer1"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_below="@id/flashcard_question"
        android:background="@drawable/secondary_color_shape"
        android:text="Bill Clinton"
        android:textAlignment="center"
        android:textSize="40sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/fake_answer2"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_below="@id/fake_answer1"
        android:background="@drawable/secondary_color_shape"
        android:text="George H. W. Bush"
        android:textAlignment="center"
        android:textSize="40sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/flashcard_answer"

        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_below="@id/fake_answer2"
        android:background="@drawable/secondary_color_shape"
        android:text="Barack Obama"
        android:textAlignment="center"
        android:textSize="40sp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/hideOrShowAnswers"
        android:layout_below="@id/flashcard_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Show Answers" />


</RelativeLayout>